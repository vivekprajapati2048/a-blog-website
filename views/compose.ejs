<%- include('partials/header'); %>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label class="form-label" for="Title">Title</label>
        <input class="form-control" type="text" id="Title" name="postTitle" autocomplete="off">

        <label class="form-label" for="Body">Post</label><br>
        <textarea class="form-control" name="postBody" id="Body" rows="5"></textarea>
    </div>
    <div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </div>
</form>

<%- include('partials/footer'); %>